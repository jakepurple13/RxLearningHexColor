<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    android:clipChildren="false"
    android:clipToPadding="false"
    tools:context=".MainActivity"
    tools:ignore="HardcodedText">

    <!--<com.programmersbox.hexcolor.ShadowImageView
        style="@style/ColorText.Digit"
        android:id="@+id/shadowTest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="1dp"
        app:shadowColor="#ffffff"
        app:shadowShadowColor="#000000"
        app:shadowDx="1.5"
        app:shadowDy="1.3"
        app:layout_constraintStart_toStartOf="@id/rgb"
        app:layout_constraintTop_toTopOf="@id/hex"
        app:shadowDrawable="@drawable/baseline_menu_white_18dp"
        tools:ignore="ContentDescription" />-->

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/favImage"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:elevation="1dp"
        app:layout_constraintBottom_toBottomOf="@id/favoritesImage"
        app:layout_constraintEnd_toEndOf="@id/favoritesImage"
        app:layout_constraintStart_toStartOf="@id/favoritesImage"
        app:layout_constraintTop_toTopOf="@id/favoritesImage"
        app:lottie_loop="true"
        app:lottie_rawRes="@raw/plus_to_x" />

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/favImageShadow"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="1.5dp"
        android:layout_marginTop="1.3dp"
        android:tint="#000000"
        app:layout_constraintBottom_toBottomOf="@id/favImage"
        app:layout_constraintEnd_toEndOf="@id/favImage"
        app:layout_constraintStart_toStartOf="@id/favImage"
        app:layout_constraintTop_toTopOf="@id/favImage"
        app:lottie_loop="true"
        app:lottie_rawRes="@raw/plus_to_x"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/favoritesImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="1dp"
        android:src="@android:drawable/ic_input_add"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@id/menuOptions"
        app:layout_constraintStart_toStartOf="@id/rgb"
        app:layout_constraintTop_toTopOf="@id/hex"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/menuOptions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="1dp"
        android:src="@drawable/baseline_menu_white_18dp"
        app:layout_constraintEnd_toEndOf="@id/color_name"
        app:layout_constraintTop_toTopOf="@id/hex"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/menuOptionsShadow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="1.5dp"
        android:layout_marginTop="1.3dp"
        android:src="@drawable/baseline_menu_white_18dp"
        android:tint="#000000"
        app:layout_constraintBottom_toBottomOf="@id/menuOptions"
        app:layout_constraintEnd_toEndOf="@id/menuOptions"
        app:layout_constraintStart_toStartOf="@id/menuOptions"
        app:layout_constraintTop_toTopOf="@id/menuOptions"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/hex"
        style="@style/ColorText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:text="#"
        android:textColor="@android:color/white"
        android:textSize="45sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="#00FFFF" />

    <TextView
        android:id="@+id/rgb"
        style="@style/ColorText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:text="0,0,0"
        android:textColor="@android:color/white"
        android:textSize="28sp"
        app:layout_constraintEnd_toStartOf="@+id/color_name"
        app:layout_constraintHorizontal_weight="10"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/hex"
        tools:text="0,255,255" />

    <TextView
        android:id="@+id/color_name"
        style="@style/ColorText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:gravity="center"
        android:textColor="@android:color/white"
        android:textSize="28sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="2"
        app:layout_constraintHorizontal_weight="8"
        app:layout_constraintStart_toEndOf="@+id/rgb"
        app:layout_constraintTop_toBottomOf="@+id/hex"
        tools:text="cyan" />

    <!--Buttons-->

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginHorizontal="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/color_name">

        <TextView
            android:id="@+id/F"
            style="@style/ColorText.Digit"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="F"
            app:layout_constraintBottom_toTopOf="@id/C"
            app:layout_constraintEnd_toEndOf="@id/C"
            app:layout_constraintStart_toStartOf="@id/C"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/C"
            style="@style/ColorText.Digit"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="C"
            app:layout_constraintBottom_toTopOf="@id/nine"
            app:layout_constraintEnd_toEndOf="@id/nine"
            app:layout_constraintStart_toStartOf="@id/nine"
            app:layout_constraintTop_toBottomOf="@id/F" />

        <TextView
            android:id="@+id/nine"
            style="@style/ColorText.Digit"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="9"
            app:layout_constraintBottom_toTopOf="@id/six"
            app:layout_constraintEnd_toEndOf="@id/six"
            app:layout_constraintStart_toStartOf="@id/six"
            app:layout_constraintTop_toBottomOf="@id/C" />

        <TextView
            android:id="@+id/three"
            style="@style/ColorText.Digit"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="3"
            app:layout_constraintBottom_toTopOf="@id/back"
            app:layout_constraintEnd_toEndOf="@id/back"
            app:layout_constraintStart_toStartOf="@id/back"
            app:layout_constraintTop_toBottomOf="@id/six" />

        <TextView
            android:id="@+id/six"
            style="@style/ColorText.Digit"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="6"
            app:layout_constraintBottom_toTopOf="@id/three"
            app:layout_constraintEnd_toEndOf="@id/three"
            app:layout_constraintStart_toStartOf="@id/three"
            app:layout_constraintTop_toBottomOf="@id/nine" />

        <TextView
            android:id="@+id/back"
            style="@style/ColorText.Digit"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="←"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/zero"
            app:layout_constraintTop_toBottomOf="@id/three" />

        <TextView
            android:id="@+id/E"
            style="@style/ColorText.Digit"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="E"
            app:layout_constraintBottom_toTopOf="@id/B"
            app:layout_constraintEnd_toEndOf="@id/B"
            app:layout_constraintStart_toStartOf="@id/B"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/B"
            style="@style/ColorText.Digit"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="B"
            app:layout_constraintBottom_toTopOf="@id/eight"
            app:layout_constraintEnd_toEndOf="@id/eight"
            app:layout_constraintStart_toStartOf="@id/eight"
            app:layout_constraintTop_toBottomOf="@id/E" />

        <TextView
            android:id="@+id/eight"
            style="@style/ColorText.Digit"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="8"
            app:layout_constraintBottom_toTopOf="@id/five"
            app:layout_constraintEnd_toEndOf="@id/five"
            app:layout_constraintStart_toStartOf="@id/five"
            app:layout_constraintTop_toBottomOf="@id/B" />

        <TextView
            android:id="@+id/five"
            style="@style/ColorText.Digit"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="5"
            app:layout_constraintBottom_toTopOf="@id/two"
            app:layout_constraintEnd_toEndOf="@id/two"
            app:layout_constraintStart_toStartOf="@id/two"
            app:layout_constraintTop_toBottomOf="@id/eight" />

        <TextView
            android:id="@+id/clear"
            style="@style/ColorText.Digit"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="⊗"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/zero"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/one" />

        <TextView
            android:id="@+id/one"
            style="@style/ColorText.Digit"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="1"
            app:layout_constraintBottom_toTopOf="@id/clear"
            app:layout_constraintEnd_toEndOf="@id/clear"
            app:layout_constraintStart_toStartOf="@id/clear"
            app:layout_constraintTop_toBottomOf="@id/four" />

        <TextView
            android:id="@+id/four"
            style="@style/ColorText.Digit"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="4"
            app:layout_constraintBottom_toTopOf="@id/one"
            app:layout_constraintEnd_toEndOf="@id/one"
            app:layout_constraintStart_toStartOf="@id/one"
            app:layout_constraintTop_toBottomOf="@id/seven" />

        <TextView
            android:id="@+id/seven"
            style="@style/ColorText.Digit"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="7"
            app:layout_constraintBottom_toTopOf="@id/four"
            app:layout_constraintEnd_toEndOf="@id/four"
            app:layout_constraintStart_toStartOf="@id/four"
            app:layout_constraintTop_toBottomOf="@id/A" />

        <TextView
            android:id="@+id/A"
            style="@style/ColorText.Digit"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="A"
            app:layout_constraintBottom_toTopOf="@id/seven"
            app:layout_constraintEnd_toEndOf="@id/seven"
            app:layout_constraintStart_toStartOf="@id/seven"
            app:layout_constraintTop_toBottomOf="@id/D" />

        <TextView
            android:id="@+id/D"
            style="@style/ColorText.Digit"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="D"
            app:layout_constraintBottom_toTopOf="@id/A"
            app:layout_constraintEnd_toEndOf="@id/A"
            app:layout_constraintStart_toStartOf="@id/A"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/zero"
            style="@style/ColorText.Digit"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="0"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/back"
            app:layout_constraintStart_toEndOf="@id/clear"
            app:layout_constraintTop_toBottomOf="@id/two" />

        <TextView
            android:id="@+id/two"
            style="@style/ColorText.Digit"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="2"
            app:layout_constraintBottom_toTopOf="@id/zero"
            app:layout_constraintEnd_toEndOf="@id/zero"
            app:layout_constraintStart_toStartOf="@id/zero"
            app:layout_constraintTop_toBottomOf="@id/five" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>